{
  "name": "Browser voice control",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Ditto",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": false
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png"
  },
  "permissions": [
    "activeTab",
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "tts",
    "ttsEngine",
    "history",
    "idle",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "js/firebase.js",
        "js/jquery-3.3.1.min.js",
        "src/inject/inject.js"
      ],
      "css": [
        "src/inject/inject.css"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}